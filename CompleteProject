day = int(input("If you would like to check your zodiac, \nInput just the day of your birthday (0-31):"))
month = str.lower(input("Input the month of your birthday (January, February, Etc):"))
if day > 31:
    print("error: date does not exist.")
elif month == 'december':
	astro_sign = 'Sagittarius' if (day < 22) else 'Capricorn'
elif month == 'january':
	astro_sign = 'Capricorn' if (day < 20) else 'Aquarius'
elif month == 'february':
	astro_sign = 'Aquarius' if (day < 19) else 'Pisces'
elif month == 'march':
	astro_sign = 'Pisces' if (day < 21) else 'Aries'
elif month == 'april':
	astro_sign = 'Aries' if (day < 20) else 'Taurus'
elif month == 'may':
	astro_sign = 'Taurus' if (day < 21) else 'Gemini'
elif month == 'june':
	astro_sign = 'Gemini' if (day < 21) else 'Cancer'
elif month == 'july':
	astro_sign = 'Cancer' if (day < 23) else 'Leo'
elif month == 'august':
	astro_sign = 'Leo' if (day < 23) else 'Virgo'
elif month == 'september':
	astro_sign = 'Virgo' if (day < 23) else 'Libra'
elif month == 'october':
	astro_sign = 'Libra' if (day < 23) else 'Scorpio'
elif month == 'november':
	astro_sign = 'Scorpio' if (day < 22) else 'Sagittarius'
else:
    print("Invalid Answer")
print("Your Astrological sign is:",astro_sign)

def HBDmessage ():
    """This function retrieves a random message and returns it"""
    birthdaymessage = {'message': ["Happy Womb Emancipation Day", "Congratulations on not dying another year!", "Hope you have a day filled with cake and happiness!", "I hope your birthday is better than mine was, and there are no tears!", "HBD, dude"]}#These are the messages I chose change them they're sad
    bddf = pd.DataFrame(birthdaymessage) #This turns the messages into a dataframe
    number = random.randint(0,4)#This sets the variable number to 1 of 5 different numbers
    return bddf['message'][number]# this returns the message from the datebase of the index number which is the random number

BDprint = HBDmessage() #this sets the function to a unique variable to be used in other parts of the code

